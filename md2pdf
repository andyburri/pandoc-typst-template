#!/bin/bash
# md2pdf - Convert Markdown to PDF using Pandoc

# Exit if any command fails
set -e

# Check if pandoc is installed
if ! command -v pandoc >/dev/null 2>&1; then
    echo "Error: pandoc is not installed." >&2
    exit 1
fi

# Check for input file
if [ $# -lt 1 ]; then
    echo "Usage: $(basename "$0") <input.md> [output.pdf]" >&2
    exit 1
fi

input="$1"
output="$2"

# Ensure input file exists
if [ ! -f "$input" ]; then
    echo "Error: File '$input' not found." >&2
    exit 1
fi

# If no output provided, replace .md with .pdf
if [ -z "$output" ]; then
    base="${input%.*}"
    output="${base}.pdf"
fi

# Run pandoc to convert
echo "Converting '$input' → '$output'..."
pandoc "$input" -o "$output" --pdf-engine=typst --template=typst.template

echo "✅ Done: $output"
